{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "watch": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
